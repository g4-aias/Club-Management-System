<% provide(:title, "Edit user") %>

<h1 class="headings">Update your profile</h1>
    
    

  <div class="row">
    
    
    <div class="gravatar_edit">
        <%= image_tag(current_user.avatar.url(:thumb)) %>
    </div>
    
    
    
    
    <div class="col-md-6 col-md-offset-3">
        <%#<%= render 'form' %>
        <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
        
       
        <%= f.label :avatar %>
        <%= f.file_field :avatar %>
       
 
        
        
          <%= f.label :email, "Email:" %>
          <%= @user.email %>
          <br>
          <%= f.label :firstname, "First Name" %>
          <%= f.text_field :firstname, class: 'form-control' %>
          
          <%= f.label :lastname, "Last Name" %>
          <%= f.text_field :lastname, class: 'form-control' %>
        
          <%= f.label :name, "Username" %>
          <%= f.text_field :name, class: 'form-control' %>
          
          <%= f.label :gender, "Gender" %>
        
            <%#= f.radio_button :gender, true %> <%#= f.label :gender, "Female" %>
            <%#= f.radio_button :gender, false %> <%#= f.label :gende, "Male" %>
   
          <%= f.select(:gender, options_for_select([['Female','♀'],
                              ['Male', '♂']])) %>
                              
          <%= f.label :phone, "Phone Number" %>
          <%= f.text_field :phone, class: 'form-control' %>
          
          <%= f.label :degree, "Degree" %>
          <%= f.select(:degree, options_for_select([['1st Year','1st Year'],
                              ['2nd Year', '2nd Year'], ['3rd Year', '3rd Year'],
                              ['4th Year', '4th Year'], ['Master', 'Master'],
                              ['Other', 'Other']])) %>
          
          <%= f.label :major, "Major" %>
          <%= f.text_field :major, class: 'form-control' %>
          
          <%= f.submit "Update Profile", class: "btn btn-primary" %>
        <% end %>
        <br>
    </div>
  
  </div>
